cpass {
  var %a = 1
  var %t $iif($1,$1,12)
  var %cpass
  while (%a <= %t) {
    var %b = $r(1,3)
    if (%b == 1) { %cpass = %cpass $+ $r(A,Z) }
    if (%b == 2) { %cpass = %cpass $+ $r(a,z) }
    if (%b == 3) { %cpass = %cpass $+ $r(0,9) }
    inc %a 1
  }
  return %cpass
}

